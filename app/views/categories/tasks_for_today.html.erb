<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="m-0">

    <div class="text-center w-50">
      <h1 class="mb-4">Today's Priority</h1>

      <% if @alltasks.any? %>
        <table class="table table-bordered table-striped table-hover">
          <thead class="bg-success">
            <tr>
              <th>ID</th>
              <th>Details</th>
              <th>Category ID</th>
              <th>Category Name</th>
            </tr>
          </thead>
          <tbody>
            <% @alltasks.each do |task| %>
              <tr>
                <td><%= task.id %></td>
                <td><%= task.details %></td>
                <td><%= task.category_id %></td>
                <td><%= task.category ? task.category.name : 'No Category Name' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No Task(s) for today.</p>
      <% end %>

      <a href="<%= categories_path %>" class="btn btn-success w-50 mt-3 py-2 rounded-3">Back to Categories</a>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
