<%= stylesheet_link_tag 'categories/show_category/show_category', media: 'all', 'data-turbo-track': 'reload' %>

<div class="container">
  <h2>
    Showing <%= @category.name %>'s Details
    <%= link_to "✍️", edit_category_path(@category), class: "edit-icon" %>
  </h2>

  <div class="category-details-container">
    <p><strong>Name:</strong> <%= @category.name %></p>
    <p><strong>Description:</strong> <%= @category.description %></p>
  </div>
  <div class="actions">
    <%= link_to "◀️ Back to Categories", categories_path %>
    <%= link_to "Category's Task(s) ▶️", category_tasks_path(@category) %>
  </div>
</div>