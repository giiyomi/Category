<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    h1 {
      margin: 20px auto;
    }

    table {
      width: 80%;
      margin: auto;
      border: 1px solid black;
      text-align: center;
      border-collapse: collapse;
      background-color: #fff;
    }

    th {
      background-color: #4CAF50 !important;
      color: white;
    }

    td, th {
      border: 1px solid black;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }

    .addButton {
      margin: 10px;
      border: none;
      border-radius: 10px;
      padding: 8px 16px;
      cursor: pointer;
      outline: none;
      background-color: #4CAF50;
      font-size: 1.2rem;
      text-align: center;
      text-decoration: none;
      color: #fff;
      transition: background-color 0.3s ease;
      position: relative;
      display: inline-block;
    }

    .addButton::after {
      content: "Add Category";
      position: absolute;
      top: 10px;
      left: 50px;
      font-size: 0.9rem;
      text-wrap: nowrap;
      color: #4CAF50;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .addButton:hover::after {
      opacity: 1;
    }

    .addButton:hover {
      background-color: #45a049;
    }

    .addButton:active {
      background-color: #3e8e41;
      transform: translateY(4px);
    }

    .taskButton {
      margin: 20px auto;
      border: none;
      border-radius: 20px;
      padding: 10px 20px;
      cursor: pointer;
      outline: none;
      background-color: #4CAF50;
      font-size: 1.2rem;
      text-align: center;
      text-decoration: none;
      color: #fff;
      transition: background-color 0.3s ease;
      display: inline-block;
    }

    .taskButton:hover {
      background-color: #45a049;
    }

    .taskButton:active {
      background-color: #3e8e41;
      transform: translateY(4px);
    }

    .empty-message {
      font-size: 1.2rem;
      color: #333;
      margin: 20px;
    }
  </style>
</head>
<body>
  <h1>Categories <%= link_to "+", new_category_path, class: "addButton" %></h1>

  <% if @categories.empty? %>
    <p class="empty-message">Please click the plus sign to add a category now.</p>
  <% else %>
    <table class="category">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Action(s)</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td>
              <%= link_to 'Show', category_path(category) %> |
              <%= link_to 'Edit', edit_category_path(category) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to "Today's Task(s)", tasks_for_today_categories_path, class: "taskButton" %>
</body>
</html>